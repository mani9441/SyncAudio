<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:gravity="center"
    android:padding="24dp">

    <!-- Top Title -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SyncAudio"
        android:textColor="#E7E7E7"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins" />



    <!-- Start as Host Button -->
    <Button
        android:id="@+id/btn_start_host"
        android:layout_width="237dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Start as Host"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_gradient" />

    <!-- Session ID Input -->
    <EditText
        android:id="@+id/session_id_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/input_background"
        android:hint="Enter Session ID"
        android:padding="16dp"
        android:textColorHint="#E7E7E7"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"/>


    <!-- Join as Client Button -->
    <Button
        android:id="@+id/btn_join_client"
        android:layout_width="237dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Join as Client"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_gradient" />
</LinearLayout>
